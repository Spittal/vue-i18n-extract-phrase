{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es2018",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "lib": ["es2018"],
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "functions/src"
  ],
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}
